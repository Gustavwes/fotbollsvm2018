{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-console": "off",
    "import/prefer-default-export": "off",
    "no-nested-ternary": "off",
    "arrow-parens": ["error", "as-needed"],
    "no-confusing-arrow": 0,
    "indent": ["error", 4],
    "react/jsx-indent": [2, 4]
  },
  "env": {
    "browser": true,
    "jest": true
  }
}
